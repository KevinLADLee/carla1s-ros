<?xml version="1.0"?>
<root main_tree_to_execute="BehaviorTree">
    <!-- ////////// -->
    <BehaviorTree ID="BehaviorTree">
        <Fallback>
            <ReactiveFallback>
                <Condition ID="CheckTrafficLight"/>
                <ReactiveFallback>
                    <Condition ID="GoalUpdated"/>
                    <Control ID="PipelineSequence">
                        <Action ID="ComputePathToGoal" goal="{goal}" path="{path}" path_planner_id="waypoint" target_speed="{target_speed}"/>
                        <Action ID="TrackingPath" path="{path}" target_speed="{target_speed}"/>
                    </Control>
                </ReactiveFallback>
            </ReactiveFallback>
            <Action ID="StopAndWait"/>
        </Fallback>
    </BehaviorTree>
    <!-- ////////// -->
    <TreeNodesModel>
        <Condition ID="CheckTrafficLight"/>
        <Action ID="ComputePathToGoal">
            <input_port default="{goal}" name="goal"/>
            <output_port default="{path}" name="path"/>
            <input_port default="waypoint" name="path_planner_id"/>
            <output_port default="20.0" name="target_speed"/>
        </Action>
        <Condition ID="GoalUpdated"/>
        <Control ID="PipelineSequence"/>
        <Action ID="StopAndWait"/>
        <Action ID="TrackingPath">
            <input_port name="path"/>
            <input_port name="target_speed"/>
        </Action>
    </TreeNodesModel>
    <!-- ////////// -->
</root>

